[{
  "verb": "PUT",
  "uri": "/graph_nodes",
  "body": {
    "settings": {
      "analysis": {
        "analyzer": {
          "default_search": {
            "tokenizer": "keyword",
            "filter": [ "lowercase" ]
          },
          "default_index": {
            "tokenizer": "keyword",
            "filter": [ "lowercase", "substring" ]
          }
        },
        "filter": {
          "substring": {
            "type": "nGram",
            "min_gram": 2,
            "max_gram": 20
          }
        }
      }
    }
  }
}]